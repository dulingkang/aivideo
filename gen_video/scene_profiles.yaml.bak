# 场景风格框架配置文件
# 用于确保同一场景系列中背景的一致性
# 
# 注意：场景配置不绑定特定集数，可在多个episode中复用
# 例如：天元城、如云客栈等场景可能在多个集数中出现
# 如需记录首次出现，可在 notes 字段中标注（可选）

scenes:
  qingluo_desert:
    scene_name: "青罗沙漠"
    # notes: "首次出现在第1集，后续可能复用"
    
    # 颜色调色板（强制使用）
    color_palette:
      primary: ["金黄", "暖橙", "淡褐色"]
      secondary: ["沙黄", "米色", "浅棕"]
      accent: ["深褐", "暗金"]
      prompt: "(金黄色沙子:1.4), (暖橙色调:1.3), (米色和褐色调:1.2), (非白沙，非红沙:1.3)"
    
    # 地形地貌
    terrain:
      description: "连绵沙丘、干燥空气、远处偶有岩壁"
      details: "连绵的沙丘，干燥的空气，远方的岩壁"
      prompt: "(翻滚的沙浪:1.3), (广阔的金色沙漠:1.4), (远方的石峰:1.2), (飘散的沙子:1.1)"
    
    # 天空
    sky:
      description: "明亮日光，略微有热浪扭曲效果"
      details: "明亮的阳光，微妙的热浪扭曲"
      prompt: "(强烈的阳光:1.3), (热浪扭曲:1.2), (晴朗明亮的天空:1.2), (金色的夕阳光线:1.1)"
    
    # 氛围
    atmosphere:
      description: "干旱、空旷、带一点神秘灵气波动"
      details: "干旱、广阔，带有微妙的灵气波动"
      prompt: "(干旱的氛围:1.2), (广阔空旷的景观:1.3), (微妙的灵气:1.1), (神秘的灵气波动:1.1)"
    
    # 风格标签
    style:
      type: "国漫·玄幻风格"
      keywords: ["仙侠修炼世界", "中国古代玄幻", "电影级仙侠风格"]
    
    # 一致性规则（强制遵守）
    consistency_rules:
      - "沙子颜色始终偏金黄，不要出现白沙或红沙"
      - "天空保持晴朗，不出现奇怪云层风暴"
      - "岩石结构保持东方玄幻风，不要变现代"
      - "保持沙漠的干燥感，不要出现水或绿洲（除非脚本明确要求）"
    
    # 合并到 prompt 的完整背景描述（自动生成）
    background_prompt: |
      {color_palette}, {terrain_prompt}, {sky_prompt}, {atmosphere_prompt}, 
      {style_keywords}, 电影级规模感, 仙侠沙漠边境

  qingluo_palace:
    scene_name: "青罗灵宫"
    
    # 颜色调色板（强制使用）
    color_palette:
      primary: ["青色", "墨绿", "深青"]
      secondary: ["淡蓝", "青白", "银灰"]
      accent: ["金色", "灵光蓝", "符文青"]
      prompt: "(green palace:1.5), (cyan and jade tones:1.4), (spiritual blue glow:1.3), (ancient green stone:1.3), (no red, no yellow:1.2)"
    
    # 地形地貌
    terrain:
      description: "巨大的青色宫殿，石柱雕刻灵文，殿前广场空旷"
      details: "massive green palace, pillars with runes, vast empty plaza"
      prompt: "(massive green palace:1.4), (ancient stone pillars with glowing runes:1.4), (vast empty plaza:1.2), (towering architecture:1.3)"
    
    # 天空/空间
    sky:
      description: "灵光如水波荡漾，虚空流光，神秘光雾"
      details: "spiritual light waves, ethereal void, mysterious light mist"
      prompt: "(spiritual light waves:1.3), (ethereal void space:1.3), (mysterious light mist:1.2), (flowing spiritual energy:1.2)"
    
    # 氛围
    atmosphere:
      description: "古老神秘、庄严肃穆、灵气浓郁"
      details: "ancient mysterious, solemn and majestic, rich spiritual energy"
      prompt: "(ancient mysterious atmosphere:1.3), (solemn and majestic:1.3), (rich spiritual energy:1.2), (otherworldly palace:1.2)"
    
    # 风格标签
    style:
      type: "国漫·玄幻风格·灵界宫殿"
      keywords: ["xianxia spirit realm palace", "ancient Chinese fantasy architecture", "mystical spiritual palace", "cultivation world temple"]
    
    # 一致性规则（强制遵守）
    consistency_rules:
      - "宫殿颜色始终偏青色系，不要出现红色或黄色宫殿"
      - "保持灵界宫殿的神秘感，符文和灵光要统一"
      - "建筑风格保持东方玄幻风，不要变现代或西式"
      - "保持庄严肃穆的氛围，不要出现过于活泼的元素"
    
    # 合并到 prompt 的完整背景描述（自动生成）
    background_prompt: |
      {color_palette}, {terrain_prompt}, {sky_prompt}, {atmosphere_prompt}, 
      {style_keywords}, cinematic sense of scale, xianxia spirit realm palace

